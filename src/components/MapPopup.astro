---
interface Props {
  company: {
    slug: string;
    name: string;
    overview?: string;
    logo_url?: string;
    is_prime?: boolean;
    is_sme?: boolean;
  };
}

const { company } = Astro.props;

const logoSrc = company.logo_url;

const shortOverview = company.overview?.slice(0, 80);
---

<a href={`/company/${company.slug}`} class="map-popup-link">
  <article class="map-popup">
    {
      (company.is_prime || company.is_sme) && (
        <div class="badges">
          {company.is_prime && <small>Prime</small>}
          {company.is_sme && <small>SME</small>}
        </div>
      )
    }
    <header>
      {
        logoSrc ? (
          <img src={logoSrc} alt="" />
        ) : (
          <span>{company.name.slice(0, 2).toUpperCase()}</span>
        )
      }
    </header>
    <h6>{company.name}</h6>
    {
      shortOverview && (
        <p>
          <small>
            {shortOverview}
            {company.overview && company.overview.length > 80 ? "..." : ""}
          </small>
        </p>
      )
    }
  </article>
</a>

<style>
  .map-popup-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .map-popup {
    position: relative;
    padding: 0.75rem;
    margin: 0;
    transition: background-color 0.15s;
  }

  .map-popup:hover {
    background-color: var(--pico-muted-border-color);
  }

  .map-popup .badges {
    position: absolute;
    top: 0.5rem;
    right: 1.75rem;
    display: flex;
    gap: 0.25rem;
  }

  .map-popup .badges small {
    opacity: 0.5;
  }

  .map-popup header {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    height: 40px;
    margin-bottom: 0.5rem;
  }

  .map-popup header img {
    max-width: 120px;
    max-height: 40px;
    width: auto;
    height: auto;
    object-fit: contain;
  }

  .map-popup header span {
    font-size: 1rem;
    font-weight: bold;
    opacity: 0.5;
  }

  .map-popup h6 {
    margin: 0 0 0.25rem 0;
  }

  .map-popup p {
    margin: 0;
  }
</style>
