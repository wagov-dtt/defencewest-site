---
import Navbar from "../components/Navbar.astro";

interface Props {
  title: string;
  description?: string;
  jsonLd?: object;
}

const {
  title,
  description = "Western Australia's Defence Industry and Science Capability Directory",
  jsonLd,
} = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://esm.sh" crossorigin />
    <link rel="preconnect" href="https://unpkg.com" crossorigin />
    <link rel="dns-prefetch" href="https://basemaps.cartocdn.com" />
    <link rel="icon" href="/favicon.ico" />
    <link
      rel="stylesheet"
      href="https://esm.sh/@picocss/pico@2/css/pico.slate.min.css"
    />
    <link
      rel="stylesheet"
      href="https://unpkg.com/maplibre-gl@5/dist/maplibre-gl.css"
      media="print"
      onload="this.media='all'"
    />
    <link rel="stylesheet" href="/styles.css" />
    <script defer src="https://unpkg.com/maplibre-gl@5/dist/maplibre-gl.js"></script>
    <title>{title}</title>
    {
      jsonLd && (
        <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
      )
    }
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <Navbar />

    <main id="main-content" class="container">
      <slot />
    </main>
  </body>
</html>
